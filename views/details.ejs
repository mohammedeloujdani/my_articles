<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body >
    <%- include("./partials/header") %> 

<div 
    class="details">
    <h1 style="font-size:20px"><%= objArticle.title %> </h1>
<p 
    class="pg" >
    <%= objArticle.body %> 
</p>
<button 
    class="d-btn"
    data-linkid="<%= objArticle._id %> " class="create">
    Delete Article
</button>

</div>
    
    <%- include("./partials/footer") %> 

<!--exemple to show attribute (id) button -->
    <script>
        const btnelement=document.querySelector(".create");
        const articleId=btnelement.getAttribute("data-linkid");

        //what is data
        //data is 
        //Link = "all-details from app.js object"

        btnelement.addEventListener("click",(eo) => {
        
            fetch(`/all-articles/${articleId}`,{method:'DELETE'})
            .then((response) => response.json())
            //code to redirect url and get object from app.js (data have object(link) from app.js)
            .then((data) => window.location.href=data.Link)
            .catch((err) => {console.log(err)})
        }
        )
        
        
        
    </script>
</body>
</html>